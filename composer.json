{
    "name": "caveja/cqrs",
    "description": "CQRS library for PHP",
    "type": "library",
    "keywords": [
        "CQRS",
        "eventsourcing"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Davide Bellettini",
            "email": "davide@bellettini.me",
            "homepage": "http://bellettini.me/"
        },
        {
            "name": "Contributors",
            "homepage": "https://github.com/Caveja/CQRS/graphs/contributors"
        }
    ],
    "require": {
        "php": ">5.4.0",
        "ext-mongo": "*",
        "doctrine/mongodb": "~1.0",
        "nicolopignatelli/valueobjects": "~1.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=3.7",
        "dbellettini/eventstore-client": "@dev"
    },
    "suggest": {
        "dbellettini/eventstore-client": "Greg Young's EventStore integration"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "Caveja\\CQRS": "src/",
            "Caveja\\CQRS\\Tests": "tests/"
        }
    }
}
